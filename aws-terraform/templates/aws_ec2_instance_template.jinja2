provider "aws" {
  region  = "{{ aws_region_name }}"
}

resource "aws_instance" "{{ ec2_rs_name }}" {
    
  ami                         = "{{ ec2_ami_value }}"
  instance_type               = "{{ ec2_instance_type }}"
  subnet_id                   = aws_subnet."{{ subnet_rs_name }}".id
  associate_public_ip_address = true
   lifecycle {
    ignore_changes = [security_groups]
  }
   tags = {
   Name = "{{ ec2_name }}"
 }
}